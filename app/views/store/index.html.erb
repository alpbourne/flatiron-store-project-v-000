<% @categories.each do |category| %>
  <%= link_to category.title, category_path(category) %>
<% end %>
<% @items.each do |item| %>
  <% if (item.inventory > 0) %>
    <p><%= item.title %> | <%= number_to_currency(item.price/100) %> | <%= "#{item.inventory} remaining units "%>
      <%= form_tag(line_items_path(item_id: item.id), method: "post") do %>
      <%= submit_tag('Add to Cart') %>
    <% end %> </p>
  <% end %>
<% end %>
